<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Talent Onboarding Task</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Sofia' rel='stylesheet'>
    
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="ui menu inverted" style="border-radius:0">
        <div class="container">
            <div style="font-size: larger">
                @Html.ActionLink("Talent", "Index", "Home", new { area = "" }, new { @class = " item" })
            </div>
            @Html.ActionLink("Customers", "Index", "Customers", null, new { @class = "item" })
            @Html.ActionLink("Products", "Index", "Products", null, new { @class = "item" })
            @Html.ActionLink("Stores", "Index", "Stores", null, new { @class = "item" })
            @Html.ActionLink("Sales", "Index", "Sales", null, new { @class = "item" })
        </div>
    </div>



        <div class="container body-content" style=" font-family:'Titillium Web'">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Ashley Chi</p>
            </footer>
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
      
        @RenderSection("Scripts", required: false)

</body>
</html>